@model QueueUnderflow.Models.Answer


@{

}

<h4 class="h4-title mb-4">Edit answer</h4>
<br />


<div class="container mt-5" style="text-align:center;">
    <div class="row">
        <div class="col-md-6 offset-3">
            @using (Html.BeginForm(controllerName: "Answers", actionName: "Edit",
                  method: FormMethod.Post, routeValues: new { id = Model.Id }))

            {
                <h3>@Html.Label("Content", "Answer")</h3>
                <br />
                <br />

                @Html.TextArea("Content", null, new { @class = "form-control summernote" })
                <br />

                @Html.ValidationMessage("Content", null, new { @class = "text-danger" })

                <br />
                <br />

                <button class="btn btn-success" type="submit"><i class="bi bi-pencil"></i> Edit</button>

}
        </div>
    </div>
</div>
